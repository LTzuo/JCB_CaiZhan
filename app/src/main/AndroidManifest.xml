<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cjkj.jcb_caizhan">

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="false"
        android:resizeable="true"
        android:smallScreens="true" />

    <!-- 用户权限设置 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- 开机动画 -->
        <activity android:name=".ui.activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- 节日图标解决方案 -->
        <activity-alias
            android:name=".newsLuncherActivity"
            android:enabled="false"
            android:icon="@mipmap/new_luncher_icon"
            android:label="测试-节日版"
            android:targetActivity=".ui.activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>
        <!-- 主页 -->
        <activity
            android:name=".ui.activity.HomeActivity"
            android:theme="@style/MainActivityColorTranslucentTheme" />
        <!-- 测试，mine-中国福利彩票开奖 -->
        <activity android:name=".ui.activity.mine.lottery.LotteryCategoryActivity" />
        <!-- 测试，mine-中国福利彩票开奖详情 -->
        <activity android:name=".ui.activity.mine.lottery.LotteryDetailActivity" />
        <!-- 设置界面 -->
        <activity android:name=".ui.activity.mine.SeetingActivity" />
        <!--切换彩站-->
        <activity android:name=".ui.activity.mine.ChangeLotteryStationActivity" />
        <!--发起众筹-->
        <activity
            android:name=".ui.activity.mine.LaunchCrowdfundingActivity"
            android:windowSoftInputMode="adjustPan|adjustResize"/>

        <activity
            android:name="com.hy.telegramgallery.GalleryActivity"
            android:theme="@style/Theme.AppCompat.Light"
            />
    </application>

</manifest>