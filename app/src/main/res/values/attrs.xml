<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- SimpleButton，简写sb -->
    <declare-styleable name="SimpleButton">
        <attr name="sb_mode" format="enum">
            <enum name="normal" value="201"/>
            <enum name="check" value="202"/>
            <enum name="icon_check_invisible" value="203"/>
            <enum name="icon_check_change" value="204"/>
        </attr>
        <attr name="sb_shape" format="enum">
            <enum name="round_rect" value="101"/>
            <enum name="arc" value="102"/>
            <enum name="rect" value="103"/>
        </attr>
        <!-- 3、5 是Gravity里定义的值 -->
        <attr name="sb_gravity" format="enum">
            <enum name="left" value="3"/>
            <enum name="right" value="5"/>
        </attr>
        <attr name="sb_auto_check" format="boolean"/>
        <attr name="sb_checked" format="boolean"/>
        <attr name="sb_bg_color" format="color"/>
        <attr name="sb_border_color" format="color"/>
        <attr name="sb_text_color" format="color"/>
        <attr name="sb_bg_color_check" format="color"/>
        <attr name="sb_border_color_check" format="color"/>
        <attr name="sb_text_color_check" format="color"/>
        <attr name="sb_text" format="string"/>
        <attr name="sb_text_check" format="string"/>
        <attr name="sb_text_size" format="dimension"/>
        <attr name="sb_border_width" format="dimension"/>
        <attr name="sb_border_radius" format="dimension"/>
        <attr name="sb_vertical_padding" format="dimension"/>
        <attr name="sb_horizontal_padding" format="dimension"/>
        <attr name="sb_icon_padding" format="dimension"/>
        <attr name="sb_icon" format="reference"/>
        <attr name="sb_icon_change" format="reference"/>
    </declare-styleable>

    <declare-styleable name="FlowlayoutTags">

        <attr name="tag_backgroundColor" format="reference|color" />
        <attr name="tag_checkedBackgroundColor" format="reference|color" />
        <attr name="tag_pressedBackgroundColor" format="reference|color" />

        <attr name="tag_inputHintColor" format="color" />
        <attr name="tag_inputTextColor" format="color" />

        <attr name="tag_horizontalSpacing" format="dimension" />
        <attr name="tag_verticalSpacing" format="dimension" />
        <attr name="tag_horizontalPadding" format="dimension" />
        <attr name="tag_verticalPadding" format="dimension" />

        <attr name="tag_textColor" format="color" />
        <attr name="tag_checkedTextColor" format="reference|color" />
        <attr name="tag_textSize" format="dimension" />

        <!-- 边框圆角半径-->
        <attr name="tag_radius" format="dimension" />
        <attr name="tag_bottomLeftRadius" format="dimension" />
        <attr name="tag_bottomRightRadius" format="dimension" />
        <attr name="tag_topLeftRadius" format="dimension" />
        <attr name="tag_topRightRadius" format="dimension" />
        <!-- 边框颜色-->
        <attr name="tag_strokeColor" format="reference|color" />
        <attr name="tag_checkedStrokeColor" format="reference|color" />
        <!-- 边框宽度-->
        <attr name="tag_strokeWidth" format="dimension" />
        <!-- 是否多选-->
        <attr name="tag_multiChooseable" format="boolean" />
        <attr name="tag_singleLine" format="boolean" />

        <!--单位dp,为了适应wrap_content用integer-->
        <attr name="tag_width" format="integer|enum">
            <enum name="wrap_content" value="-2"/>
            <enum name="match_parent" value="-1"/>
        </attr>
        <attr name="tag_height" format="integer|enum">
            <enum name="wrap_content" value="-2"/>
            <enum name="match_parent" value="-1"/>
        </attr>
        <attr name="tag_maxEms" format="integer" />
    </declare-styleable>

    <declare-styleable name="Themes">
        <attr name="flowlayoutTagsStyle" format="reference" />
    </declare-styleable>

    <!--checkbox属性-->
    <declare-styleable name="SmoothCheckBox">
        <attr name="duration" format="integer"/>
        <attr name="stroke_width" format="dimension"/>
        <attr name="color_tick" format="color"/>
        <attr name="color_checked" format="color"/>
        <attr name="color_unchecked" format="color"/>
        <attr name="color_unchecked_stroke" format="color"/>
    </declare-styleable>
</resources>
