<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light" />

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular LiveApi-level can go here. -->
        <item name="android:listDivider">@drawable/default_line</item>
    </style>

    <style name="BaseAppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
    <!-- Base application theme. -->
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowSoftInputMode">adjustPan|stateHidden</item>
    </style>

    <!-- 主界面 设置Style -->
    <style name="MainActivityColorTranslucentTheme" parent="@style/BaseAppTheme" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ToolBarPopupThemeDay" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="customTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>//标题栏背景色
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="RecyclerViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:scrollbars">none</item>
    </style>

    <!--字体样式-细体-->
    <style name="font_style">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="FlowlayoutTags">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tag_textColor">#49C120</item>
        <item name="tag_backgroundColor">#FFFFFF</item>
        <item name="tag_inputHintColor">#80000000</item>
        <item name="tag_inputTextColor">#DE000000</item>
        <item name="tag_checkedTextColor">#FFFFFF</item>
        <item name="tag_checkedBackgroundColor">#49C120</item>
        <item name="tag_pressedBackgroundColor">#EDEDED</item>
        <item name="tag_textSize">15sp</item>
        <item name="tag_horizontalSpacing">5dp</item>
        <item name="tag_verticalSpacing">5dp</item>
        <item name="tag_horizontalPadding">12dp</item>
        <item name="tag_verticalPadding">3dp</item>
        <item name="tag_radius">5dp</item>
        <item name="tag_strokeColor">@drawable/gray_white_selector</item>
        <item name="tag_checkedStrokeColor">#49C120</item>
        <item name="tag_strokeWidth">1px</item>
        <item name="tag_multiChooseable">true</item>
        <item name="tag_singleLine">true</item>
        <!--<item name="tag_width">wrap_content</item>-->
        <!--<item name="tag_height">wrap_content</item>-->
        <item name="tag_width">85</item>
        <item name="tag_height">30</item>
    </style>

    <style name="FlowlayoutTags.Red" parent="FlowlayoutTags">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tag_textColor">@color/font_gray</item>
        <item name="tag_backgroundColor">@color/base_color_6</item>
        <item name="tag_checkedTextColor">@color/base_color_6</item>
        <item name="tag_checkedBackgroundColor">@color/colorPrimary</item>
        <item name="tag_pressedBackgroundColor">#EDEDED</item>
        <item name="tag_radius">5dp</item>
        <item name="tag_strokeColor">@drawable/gray_white_selector</item>
        <item name="tag_checkedStrokeColor">@color/colorPrimary</item>
        <item name="tag_strokeWidth">1px</item>
        <!--这里设置固定大小,padding为0-->
        <item name="tag_horizontalPadding">2dp</item>
        <item name="tag_verticalPadding">0dp</item>
        <!--单位dp-->
        <item name="tag_width">55</item>
        <item name="tag_height">25</item>
        <!--限制tag显示长度,规则查看Textview-->
        <item name="tag_maxEms">5</item>
        <!--单选-->
        <item name="tag_multiChooseable">false</item>
    </style>

    <!--确认按钮样式-->
    <style name="red_button_style">
         <item name="android:layout_width">match_parent</item>
         <item name="android:layout_height">wrap_content</item>
         <item name="android:paddingTop">10dp</item>
         <item name="android:paddingBottom">10dp</item>
         <item name="android:layout_marginLeft">20dp</item>
         <item name="android:layout_marginRight">20dp</item>
         <item name="android:background">@drawable/shape_red_bg</item>
         <item name="android:gravity">center</item>
         <item name="android:textColor">@color/white</item>
    </style>

</resources>
