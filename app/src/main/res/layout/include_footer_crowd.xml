<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/Layout_participateIn"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/Layout_ticket"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/line_bg" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="参与众筹"
            android:textColor="@color/black_alpha_70"
            android:textSize="@dimen/_12dp" />

        <TextView
            android:id="@+id/tv_hint_participateIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_10dp" />
    </LinearLayout>
    <com.cjkj.jcb_caizhan.widget.SubListView
        android:id="@+id/TablelistView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/gray_frame_bg" />
</LinearLayout>