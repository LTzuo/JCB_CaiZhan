<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/Layout_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <cn.carbs.android.avatarimageview.library.AvatarImageView
        android:id="@+id/img_avatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:padding="2dp"
        android:src="@mipmap/flight"
        app:aiv_ShowBoarder="false"
        app:aiv_TextSizeRatio="0.4" />

    <TextView
        android:id="@+id/tv_autherSiteName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/black_alpha_70"
        android:textSize="@dimen/_15dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_autherName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/black_alpha_60"
            android:textSize="@dimen/_13dp" />

        <TextView
            android:id="@+id/tv_autherDestAddr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="店主：林天佐   电话：13943025871"
            android:textColor="@color/black_alpha_60"
            android:textSize="@dimen/_13dp" />
    </LinearLayout>

    <com.cjkj.jcb_caizhan.widget.CustomTextView
        android:id="@+id/mCustomTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingBottom="3dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="3dp"
        android:text="众筹中"
        android:textColor="@color/white"
        android:textSize="@dimen/_10dp"
        app:textRadius="@dimen/_10dp"
        app:textSolidColor="@color/_ec6941"
        app:textStrokeWidth="2dp" />

</LinearLayout>