<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_f3f2f7"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.cjkj.jcb_caizhan.modul.personal_center.personcl_information.PersonclInformationActivity">

    <include layout="@layout/toolbar"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/Layout_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/snow"
                android:gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_15dp"
                    android:textColor="@color/black_alpha_70"
                    android:layout_weight="1"
                    android:text="头像"/>

                <cn.carbs.android.avatarimageview.library.AvatarImageView
                    android:id="@+id/mAvatarImageView"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/flight"
                    android:layout_gravity="center_horizontal"
                    android:padding="2dp"
                    app:aiv_BoarderWidth="2dp"
                    app:aiv_BoarderColor="#db4358"
                    app:aiv_ShowBoarder="false"
                    app:aiv_TextSizeRatio="0.4"/>
            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>
