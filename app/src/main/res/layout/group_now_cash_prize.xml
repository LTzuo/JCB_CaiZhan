<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/bg_f3f2f7" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp">

        <com.mixiaoxiao.smoothcompoundbutton.SmoothCheckBox
            android:id="@+id/group_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:enabled="true"
            android:text=""
            android:tint="@color/sample_tint_color_selector" />

        <LinearLayout
            android:id="@+id/group_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/group_checkbox"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/group_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="双色球"
                android:textColor="@color/black_alpha_70"
                android:textSize="@dimen/_14dp" />


            <TextView
                android:id="@+id/group_stage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/group_name"
                android:text="第201813期"
                android:textColor="@color/black_alpha_45"
                android:textSize="@dimen/_12dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/group_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/group_layout"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/group_checkbox"
            android:text="订单编号6565767897958"
            android:textColor="@color/black_alpha_45"
            android:textSize="@dimen/_12dp" />

        <cn.carbs.android.avatarimageview.library.AvatarImageView
            android:id="@+id/group_img"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/group_user"
            app:aiv_BoarderWidth="2dp"
            app:aiv_ShowBoarder="false"
            app:aiv_TextSizeRatio="0.4" />

        <TextView
            android:id="@+id/group_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/groupIcon"
            android:text="林天佐"
            android:textColor="@color/black_alpha_45"
            android:textSize="@dimen/_12dp" />

        <ImageView
            android:id="@+id/groupIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/xl_jt" />

    </RelativeLayout>

</LinearLayout>