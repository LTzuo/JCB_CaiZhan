<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/white"
    >

    <com.mixiaoxiao.smoothcompoundbutton.SmoothCheckBox
        android:id="@+id/group_checkbox"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:checked="false"
        android:enabled="true"
        android:text=""
        android:tint="@color/sample_tint_color_selector" />


    <LinearLayout
        android:id="@+id/group_layout"
        android:layout_toRightOf="@+id/group_checkbox"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    <TextView
        android:id="@+id/group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black_alpha_70"
        android:textSize="@dimen/_14dp"
        android:text="双色球"/>


    <TextView
        android:id="@+id/group_stage"
        android:layout_toRightOf="@+id/group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black_alpha_45"
        android:textSize="@dimen/_12dp"
        android:text="第201813期"/>
    </LinearLayout>
    <TextView
        android:id="@+id/group_number"
        android:layout_below="@+id/group_layout"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/group_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black_alpha_45"
        android:textSize="@dimen/_12dp"
        android:text="订单编号6565767897958"/>


    <TextView
        android:id="@+id/group_user"
        android:layout_toLeftOf="@+id/groupIcon"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black_alpha_45"
        android:textSize="@dimen/_12dp"
        android:text="林天佐"/>

    <ImageView
        android:id="@+id/groupIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/xl_jt"/>


</RelativeLayout>